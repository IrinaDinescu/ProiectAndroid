<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    >


    <TextView
        android:id="@+id/tv_sold"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="Sold Curent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:textSize="30sp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="155dp"
        android:hint="cont curent"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tv_cont_curent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"
        android:hint="Cont curent"
        android:textSize="20sp"
        android:text="RO49 AAAA 1B31 0075 9384 0000"

        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="210dp"
        android:hint="economii"
        android:layout_marginLeft="10dp"
        />


    <TextView
        android:id="@+id/tv_economii"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"
        android:hint="Cont curent"
        android:textSize="20sp"
        android:text="20 000 lei"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="370dp"
        android:hint="servicii"
        android:layout_marginLeft="30dp"
        />

    <Spinner
        android:id="@+id/sp_servicii"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="20dp"
        android:background="@color/purple_200"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="450dp"
        android:text="@string/push_alerts"
        android:layout_marginLeft="50dp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="490dp"
        android:text="@string/banca_pay"
        android:layout_marginLeft="50dp"
        />

    <Switch
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="200dp"
        />

    <Switch
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="200dp"
        />









    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-56dp"
        app:menu="@menu/bottom_navigation"
        android:background="?android:attr/windowBackground"/>




</RelativeLayout>